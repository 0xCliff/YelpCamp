<% layout("layouts/boilerplate") %>

<div class="container h-[25px] mb-3">
  <div class="d-flex flex-row justify-content-between align-items-center">
    <h1 class="p-2">All Campgrounds</h1>
    <a class="btn btn-outline-success btn-small p-2" href="/campgrounds/add">Add Campground</a>
  </div>
</div>

<% for (let campground of campgrounds) { %>
<div class="card mb-3 border border-secondary">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= campground.image %>" alt="" class="img-fluid rounded" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
        <p class="card-text">
          <small class="text-muted d-block">$<%= campground.price %>.00</small>  
          <small class="text-muted"><%= campground.location %></small>  
        </p>
        <a class="btn btn-outline-secondary" href="campgrounds/<%= campground._id %>">View <%= campground.title %></a>
      </div>
    </div>
  </div>
</div>
<% } %>
