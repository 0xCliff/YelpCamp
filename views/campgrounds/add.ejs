<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">Add a campground</h1>
  <div class="col-6 offset-3">
    <form
      class="needs-validation"
      action="/campgrounds"
      method="POST"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
          required
        />
      <div class="invalid-feedback">Title Required!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
          required
        />
      <div class="invalid-feedback">Location Required!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input
            name="campground[price]"
            id="price"
            type="number"
            class="form-control"
            aria-label="Amount (to the nearest dollar)"
            required
          />
      <div class="invalid-feedback">Price Required!</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          name="campground[image]"
          id="image"
          required
        />
      <div class="invalid-feedback">At least 1 image is Required!</div>

      </div>
      <div class="mb-3">
        <label class="form-label" for="descrition">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="campground[description]"
          id="description"
          rows="8"
          required
        ></textarea>
      <div class="invalid-feedback">Description Required!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-outline-success btn-small" type="submit">
          Add
        </button>
        <a class="btn btn-outline-primary btn-small" href="/campgrounds"
          >back</a
        >
      </div>
    </form>
  </div>
</div>


